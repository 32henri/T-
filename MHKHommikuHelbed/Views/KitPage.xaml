<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.CiniPage"
             Title="KitKatPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label 
            Text="KitKat!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image
            Source="kit.png"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="150"
            HeightRequest="150"
            TranslationX="-0"
            TranslationY="-400"
            Grid.Row="1"/>
        <BoxView Grid.Row="2"
                 Color="Gray"
                 HeightRequest="3"
                 HorizontalOptions="Fill"
                 TranslationX="-200"
                 TranslationY="-250"/>
        <BoxView Grid.Row="2"
                 Color="Gray"
                 HeightRequest="3"
                 HorizontalOptions="Fill"
                 TranslationX="200"
                 TranslationY="-247"/>
        <ScrollView Grid.Row="1">
            <StackLayout>
                <Label Text="Description:"
                       FontAttributes="Bold"
                       TranslationX="-0"
                       TranslationY="320"
                       Margin="10"/>
                <Label Text="KitKat on maailmakuulus šokolaaditahvel, millel on krõbe küpsisekiht ja rikkalik pehme šokolaaditäidis. Selle unikaalne tekstuur ja magus maitse on võrratud. "
                       TranslationX="-0"
                       TranslationY="300"
                       Margin="10"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>